<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/popularFragment">

    <fragment
        android:id="@+id/trendingFragment"
        android:name="com.example.tmdbmovieapp.view.fragment.TrendingFragment"
        android:label="TrendingFragment"
        tools:layout="@layout/fragment_trending">
        <action
            android:id="@+id/action_trendingFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/popularFragment"
        android:name="com.example.tmdbmovieapp.view.fragment.PopularFragment"
        android:label="PopularFragment"
        tools:layout="@layout/fragment_popular">
        <action
            android:id="@+id/action_popularFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/upcomingFragment"
        android:name="com.example.tmdbmovieapp.view.fragment.UpcomingFragment"
        android:label="UpcomingFragment"
        tools:layout="@layout/fragment_upcoming">
        <action
            android:id="@+id/action_upcomingFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.tmdbmovieapp.view.fragment.DetailFragment"
        android:label="DetailFragment" />
</navigation>